{
  "compilerOptions": {
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "allowJs": true,
    "sourceMap": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@types/node",
      "vue-apollo/types",
      "@nuxt/types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}